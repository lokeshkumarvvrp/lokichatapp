 <div class="d-flex  align-items-center">
    <% if user_signed_in? %>
      Welcome,&nbsp;<strong><%= current_user.email %></strong>
      <%= link_to 'Edit profile', edit_user_registration_path, class: 'btn btn-primary btn-sm mx-2' %>
      <%= link_to 'Logout', destroy_user_session_path, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm mx-2' %>
    <% else %>
      <%= link_to "Sign up", new_user_registration_path, class: 'btn btn-success btn-sm mx-2' %>
      <%= link_to "Login", new_user_session_path, class: 'btn btn-primary btn-sm mx-2' %>
    <% end %>
  </div><br>
  <hr>